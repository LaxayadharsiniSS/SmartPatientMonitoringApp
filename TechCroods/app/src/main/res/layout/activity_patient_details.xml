<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#131019">

    <TextView
        android:id="@+id/patientNameView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="#131019"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.10" />

    <LinearLayout
        android:layout_width="289dp"
        android:layout_height="408dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/bodyTempView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#131019"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/o2SatView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#131019"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/bPView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#131019"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/heartRateView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#131019"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/sugarLevelView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#131019"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/respirationRate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#131019"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>